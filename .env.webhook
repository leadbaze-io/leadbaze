# ?? CONFIGURAÇÕES ESPECÍFICAS DO LEADBAZE
# Dados padrão para perfis criados automaticamente
DEFAULT_BILLING_CITY=São Paulo
DEFAULT_BILLING_STATE=SP
DEFAULT_BILLING_COUNTRY=BR
DEFAULT_BILLING_ZIP_CODE=01000-000

# Métodos de pagamento padrão
DEFAULT_PAYMENT_METHODS=credit_card,pix

# Ciclo de cobrança padrão
DEFAULT_BILLING_CYCLE=monthly

# ?? CONFIGURAÇÕES DE EMAIL (opcional)
# Para notificações de erro ou sucesso
ADMIN_EMAIL=admin@leadbaze.io

# ?? CONFIGURAÇÕES DE MONITORAMENTO
# Intervalo para verificação de saúde (em ms)
HEALTH_CHECK_INTERVAL=30000

# Timeout para health checks (em ms)
HEALTH_CHECK_TIMEOUT=5000

# ?? CONFIGURAÇÕES DE MÉTRICAS
# Habilitar coleta de métricas
ENABLE_METRICS=true

# Intervalo para coleta de estatísticas (em ms)
METRICS_INTERVAL=60000

# ??? CONFIGURAÇÕES DE CORS
# Origens permitidas para CORS
CORS_ORIGINS=https://leadbaze.io,https://www.leadbaze.io

# ?? CONFIGURAÇÕES DE ALERTAS
# Webhook para notificações de erro (opcional)
ERROR_WEBHOOK_URL=

# ?? CONFIGURAÇÕES DE DEBUG
# Habilitar logs detalhados
DEBUG_MODE=false

# Mostrar stack traces em erros
SHOW_STACK_TRACE=false

# ?? CONFIGURAÇÕES DE RETRY
# Número máximo de tentativas para operações
MAX_RETRY_ATTEMPTS=3

# Delay entre tentativas (em ms)
RETRY_DELAY=2000

# ?? CONFIGURAÇÕES DE CACHE
# Habilitar cache de perfis
ENABLE_PROFILE_CACHE=true

# TTL do cache (em segundos)
PROFILE_CACHE_TTL=300

# ?? CONFIGURAÇÕES DE VALIDAÇÃO
# Validar dados de entrada
VALIDATE_INPUT=true

# Sanitizar dados de entrada
SANITIZE_INPUT=true

# ?? CONFIGURAÇÕES DE BACKUP
# Habilitar backup de perfis
ENABLE_BACKUP=false

# Intervalo de backup (em horas)
BACKUP_INTERVAL=24

# Diretório de backup
BACKUP_DIR=./backups

# ?? CONFIGURAÇÕES DE PERSONALIZAÇÃO
